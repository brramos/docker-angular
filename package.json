{
  "name": "docker-angular-container",
  "version": "1.0.0",
  "description": "An AngularJS container",
  "main": "server.js",
  "scripts": {
    "browserify": "./bin/browserify",
    "watch:scss": "./bin/watch-css",
    "reinstall": "rimraf node_modules && yarn",
    "start": "parallelshell 'yarn serve' 'yarn watch'",
    "css:dev": "./bin/build-css",
    "css:prod": "node-sass src/scss/index.scss --output-style compressed | postcss -u autoprefixer -b 'last 2 versions' > dist/css/app.css",
    "js:dev": "./bin/build-js",
    "js:prod": "babel src/js | uglifyjs -m -c > dist/js/app.js",
    "js:vendor": "uglifyjs vendor/*.js > dist/js/vendor.js",
    "clean": "rimraf dist",
    "mkdirs": "mkdir -p dist/images && mkdir -p dist/videos && mkdir -p dist/js && mkdir -p dist/styles",
    "copy:assets": "cp -r assets/* dist",
    "copy:html": "cp src/index.html dist",
    "copy": "yarn copy:assets && yarn browserify && yarn copy:html",
    "prebuild:dev": "yarn clean && yarn mkdirs && yarn copy",
    "build:dev": "yarn css:dev && yarn js:dev && yarn js:vendor",
    "prebuild:prod": "yarn clean && yarn mkdirs && yarn copy",
    "build:prod": "yarn css:prod && yarn js:prod && yarn js:vendor",
    "postbuild:prod": "yarn hash",
    "hash": "hashmark **/(app|vendor).* -d md5 -l 8 -c dist '{dir}/{name}.{hash}{ext}' | replaceinfiles -S -s dist/**/*.html",
    "posthash": "rm dist/css/app.css && rm dist/js/app.js",
    "lint": "eslint src/js --fix",
    "pretest": "yarn lint",
    "test": "yarn istanbul -s",
    "posttest": "yarn coverage -s",
    "istanbul": "istanbul cover ./node_modules/mocha/bin/_mocha 'test/**/*.spec.js'",
    "coverage": "open -a 'Google Chrome' ./coverage/lcov-report/index.html",
    "kill": "lsof -n -i:8080 | grep LISTEN | awk '{print $2}' | xargs kill -9",
    "preserve": "yarn build:dev && yarn kill",
    "serve": "browser-sync start -s --files 'dist/**/*.(js|css|html)' --ss 'dist' --port 8080 --reload-debounce 500",
    "watch:assets": "onchange 'assets/**/*' -- yarn copy:assets",
    "watch:vendor": "onchange 'vendor/**/*.js' -- yarn js:vendor",
    "watch:html": "onchange 'src/**/*.html' -- yarn copy",
    "watch:css": "onchange 'src/**/*.scss' -- yarn css:dev",
    "watch:js": "onchange 'src/**/*.js' -- yarn browserify",
    "watch": "parallelshell 'yarn watch:css' 'yarn watch:js' 'yarn watch:html' 'yarn watch:assets'",
    "predeploy": "yarn build:prod",
    "deploy": "firebase deploy --project project-name",
    "prezip": "yarn build:prod",
    "zip": "cd dist && zip -r -X ../app.zip ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brramos/docker-angular.git"
  },
  "keywords": [
    "angular",
    "docker",
    "container"
  ],
  "author": "Billy Ramos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/brramos/docker-angular/issues"
  },
  "homepage": "https://github.com/brramos/docker-angular#readme",
  "devDependencies": {
    "angular-mocks": "1.5.8",
    "angular-route": "1.5.8",
    "browserify": "16.2.2",
    "jasmine-core": "3.2.0",
    "karma": "3.0.0",
    "karma-browserify": "5.3.0",
    "karma-jasmine": "1.1.2",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "karma-phantomjs-launcher": "1.0.4",
    "nodemon": "1.18.3",
    "node-sass": "4.9.3",
    "stringify": "5.2.0",
    "vinyl-source-stream": "2.0.0",
    "watchify": "3.11.0",
    "autoprefixer": "6.3.7",
    "babel-cli": "6.11.4",
    "babel-preset-es2015": "6.9.0",
    "browser-sync": "2.14.0",
    "chai": "3.5.0",
    "chai-as-promised": "5.3.0",
    "dirty-chai": "1.2.2",
    "eslint": "3.2.2",
    "firebase-tools": "3.0.5",
    "hashmark": "3.1.0",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "2.5.3",
    "mocha-clean": "1.0.0",
    "onchange": "2.5.0",
    "parallelshell": "3.0.2",
    "postcss-cli": "2.5.2",
    "replaceinfiles": "1.1.4",
    "rimraf": "2.5.4",
    "uglify-js": "2.7.0"
  },
  "dependencies": {
    "angular": "1.5.8"
  }
}
